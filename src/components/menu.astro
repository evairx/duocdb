---
const currentPath = Astro.url.pathname;

import LogoDb from "@/assets/svg/logoDb"
import Search from "./search.astro";
---

{currentPath == '/' ? (
    <nav class="mt-[1rem] flex items-center justify-center flex-wrap logo-fade-in-top ">
        <a href="/">
            <div class="flex items-center gap-2 transition-transform duration-300 ease-in-out cursor-default select-none hover:scale-110">
                <LogoDb client:only/>
                <h4 class="text-[1.650rem] font-bold">DuocDB</h4>
            </div>
        </a>
    </nav>
): (
    <nav class="mb-[3rem] flex justify-center items-center animate-fadeInTop md:justify-between">
        <a href="/" class="no-underline text-black flex items-center gap-2">
            <div class="flex items-center gap-2 transition-transform duration-300 ease-in-out cursor-default select-none hover:scale-110">
                <h4 class="text-[1.650rem] font-bold">DuocDB</h4>
            </div>
        </a>
        <Search/>
    </nav>
)}