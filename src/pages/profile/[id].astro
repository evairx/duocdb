---
const { id } = Astro.params;

import Layout from '@/layouts/main.astro'
import Menu from '@/components/menu.astro';
import Header from '@/components/header/header.astro';
import Statistic from '@/components/statistic/statistic.astro';
import HeaderSkeleton from '@/components/header/headerLoading.astro';
import GradesSkeleton from '@/components/grades/gradesLoading.astro';
import Overlay from "@/components/overlay"
---

<Layout>
	<Menu/>
	<Header name={id} server:defer>
		<HeaderSkeleton slot="fallback" />
	</Header>
	
	<Statistic name={id} server:defer />

	<GradesSkeleton />

	<Overlay client:only/>
</Layout>